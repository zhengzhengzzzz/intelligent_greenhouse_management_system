<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hist.greenHouse.mapper.SystemConfigMapper">
    <!--   添加-->
    <insert id="addSystemConfig" parameterType="SystemConfig">
        insert into system_config (id, uid, `key`, `value`)
        values (#{id},#{uid},#{key},#{value})
    </insert>
    <!--    删除-->
    <delete id="deleteSystemConfig">
        delete from system_config where id = #{id}
    </delete>
    <!--    修改-->
    <update id="updateSystemConfig" parameterType="SystemConfig">
        update system_config set `key` = #{key},`value` = #{value} where id = #{id}
    </update>
    <!--    根据id查询-->
    <select id="getSystemConfig" resultType="SystemConfig">
        select * from system_config where id = #{id}
    </select>
    <!--    分页查询-->
    <select id="getPages" parameterType="Integer" resultType="SystemConfig">
        select * from system_config where uid = #{uid} limit #{offset},#{pageSize}
    </select>
    <!--    查询总数-->
    <select id="getCount" parameterType="Integer" resultType="Integer">
        select count(*) from system_config where uid = #{uid}
    </select>
</mapper>